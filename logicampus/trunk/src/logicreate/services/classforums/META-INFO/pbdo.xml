<?xml version="1.0"?>
<!-- MySQL does not support foreign keys. This means   -->
<!-- that this XML file will not reflect foreign key   -->
<!-- relationships. You will have to do that yourself. -->
<project name="logicampus">
  <entity  name="class_forum">
    <attribute name="class_forum_id"
            required="true"
            primaryKey="true"
            size="11"
            type="INTEGER"/>
    <attribute name="name"
            required="true"
            size="255"
            type="VARCHAR"/>
    <attribute name="description"
            required="true"
            size="255"
            type="VARCHAR"/>
    <attribute name="class_forum_recent_post_timedate"
            required="true"
            default="0"
            size="11"
            type="INTEGER"/>
    <attribute name="class_forum_recent_poster"
            required="true"
            size="32"
            type="VARCHAR"/>
    <attribute name="class_forum_thread_count"
            required="true"
            default="0"
            size="11"
            type="INTEGER"/>
    <attribute name="class_forum_post_count"
            required="true"
            default="0"
            size="11"
            type="INTEGER"/>
    <attribute name="class_forum_unanswered_count"
            required="true"
            default="0"
            size="11"
            type="INTEGER"/>
    <attribute name="class_forum_section_id"
            required="false"
            default="0"
            size="11"
            type="INTEGER"/>
  </entity>
  <entity  name="class_forum_post">
    <attribute name="class_forum_post_id"
            required="true"
            primaryKey="true"
            size="11"
            type="INTEGER"/>
    <attribute name="class_forum_id"
            required="true"
            default="0"
            size="11"
            type="INTEGER"/>
    <attribute name="is_sticky"
            required="false"
            size="1"
            type="TINYINT"/>
    <attribute name="reply_id"
            required="false"
            size="11"
            type="INTEGER"/>
    <attribute name="thread_id"
            required="false"
            size="11"
            type="INTEGER"/>
    <attribute name="subject"
            required="true"
            size="255"
            type="VARCHAR"/>
    <attribute name="message"
            required="true"
            size=""
            type="TEXT"/>
    <attribute name="user_id"
            required="true"
            size="32"
            type="VARCHAR"/>
    <attribute name="post_timedate"
            required="true"
            default="0"
            size="11"
            type="INTEGER"/>
    <attribute name="class_forum_post_status"
            required="true"
            default="0"
            size="11"
            type="INTEGER"/>
  </entity>
  <entity  name="class_forum_category">
    <attribute name="class_forum_category_id"
            required="true"
            primaryKey="true"
            size="11"
            type="INTEGER"/>
    <attribute name="name"
            required="true"
            size="255"
            type="VARCHAR"/>
    <index>
      <index-attribute name="class_forum_section_parent_id"/>
    </index>
  </entity>
</project>
